/* index.wxss */
page {
    background-color: #f8f9fa;
    font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
    color: #333;
  }
  
  .container {
    width: 100%;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    max-width: 700rpx;
    margin: 0 auto;
  }
  
  .header {
    text-align: center;
    margin: 40rpx 0;
  }
  
  .title {
    font-size: 40rpx;
    font-weight: bold;
    color: #2c3e50;
    margin-bottom: 10rpx;
  }
  
  .subtitle {
    font-size: 26rpx;
    color: #7f8c8d;
  }
  
  .card {
      margin-top: 20rpx;
    background: white;
    width: 80%;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
    padding: 30rpx;
    margin-bottom: 30rpx;
  }
  
  .input-section {
    text-align: center;
  }
  
  .code-input {
    font-size: 48rpx;
    font-weight: bold;
    text-align: center;
    height: 100rpx;
    color: #3498db;
    letter-spacing: 10rpx;
  }
  
  .result-section {
    background-color: #ffffff;
  }
  
  .result-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .result-label {
    font-size: 32rpx;
    font-weight: 500;
    color: #2c3e50;
  }
  
  .result-value {
    font-size: 48rpx;
    font-weight: bold;
    color: #e74c3c;
  }
  
  .breakdown {
    background-color: white;
    border-radius: 12rpx;
    padding: 20rpx;
    font-size: 28rpx;
    line-height: 1.6;
    color: #555;
    white-space: pre-line;
  }
  
  .instruction-section {
    background-color: #ffffff;
  }
  
  .instruction-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #2c3e50;
    margin-bottom: 20rpx;
  }
  
  .instruction-content {
    font-size: 26rpx;
    line-height: 1.6;
    color: rgb(0, 0, 0);
    font-style:bold;
  }
  
  .example {
    background-color: #e7e7e7;
    border-radius: 8rpx;
    color: #e74c3c;
    padding: 15rpx;
    font-size: 35rpx;
    font-style: italic;
    margin-top: 15rpx;
    font-family: monospace;
  }