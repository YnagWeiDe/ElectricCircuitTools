/* index.wxss */
/* 页面样式 */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx;
    background-color: #f5f7fa;
    min-height: 100vh;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }
  
  /* 标题区域 */
  .header {
    text-align: center;
    margin: 20rpx 0 30rpx;
    padding: 20rpx;
    width: 100%;
  }
  
  .title {
    font-size: 38rpx;
    font-weight: bold;
    color: #2c3e50;
    display: block;
    margin-bottom: 12rpx;
  }
  
  .subtitle {
    font-size: 26rpx;
    color: #7f8c8d;
    display: block;
  }
  
  /* 卡片样式 */
  .card {
    background-color: #fff;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
    padding: 30rpx;
    margin-bottom: 30rpx;
    width: 100%;
  }
  
  /* 选择器区域 */
  .selector-section {
    display: flex;
    flex-direction: column;
    gap: 30rpx;
  }
  
  .selector-group {
    display: flex;
    flex-direction: column;
  }
  
  .selector-label {
    font-size: 30rpx;
    font-weight: 500;
    color: #2c3e50;
    margin-bottom: 15rpx;
  }
  
  .picker-view {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #f8f9fa;
    border: 1rpx solid #e9ecef;
    border-radius: 12rpx;
    height: 80rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
    color: #495057;
  }
  
  .down-icon {
    width: 30rpx;
    height: 30rpx;
  }
  
  .divider {
    height: 1rpx;
    background-color: #e9ecef;
    margin: 10rpx 0;
  }
  
  .divider.light {
    background-color: #f1f3f5;
    margin: 20rpx 0;
  }
  
  /* 芯片信息区域 */
  .info-section {
    background: linear-gradient(to right, #f0f7ff, #f8fbff);
  }
  
  .section-header {
    margin-bottom: 20rpx;
  }
  
  .section-title {
    font-size: 34rpx;
    font-weight: bold;
    color: #2c3e50;
    display: block;
  }
  
  .section-subtitle {
    font-size: 26rpx;
    color: #3498db;
    font-weight: 500;
    display: block;
    margin-top: 8rpx;
  }
  
  .chip-info {
    margin: 20rpx 0;
  }
  
  .info-row {
    font-size: 28rpx;
    line-height: 1.6;
  }
  
  .info-value {
    color: #212529;
  }
  
  .chip-params {
    display: flex;
    flex-direction: column;
    gap: 18rpx;
    margin-top: 20rpx;
  }
  
  .param-row {
    display: flex;
    font-size: 28rpx;
  }
  
  .param-label {
    color: #495057;
    font-weight: 500;
    width: 180rpx;
  }
  
  .param-value {
    color: #212529;
    flex: 1;
    font-weight: 500;
  }
  
  /* 芯片示意图 */
  .chip-diagram {
    background: linear-gradient(to right, #f9fbfd, #ffffff);
  }
  
  .diagram-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 20rpx;
  }
  
  .pin-container {
    width: 100%;
  }
  
  .pin-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 70rpx;
    border-bottom: 1rpx dashed #e9ecef;
  }
  
  .pin {
    width: 120rpx;
    height: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #e3f2fd;
    border-radius: 8rpx;
    font-size: 24rpx;
    font-weight: 500;
  }
  
  .pin.left {
    margin-right: auto;
  }
  
  .pin.right {
    margin-left: auto;
  }
  
  .pin-number {
    font-size: 24rpx;
    color: #6c757d;
    width: 50rpx;
    text-align: center;
  }
  
  .chip-body {
    width: 300rpx;
    height: 200rpx;
    background: linear-gradient(135deg, #e3f2fd, #bbdefb);
    border: 2rpx solid #90caf9;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 30rpx 0;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .chip-label {
    font-size: 32rpx;
    font-weight: bold;
    color: #1565c0;
    text-align: center;
  }
  
  /* 底部提示 */
  .footer {
    font-size: 24rpx;
    color: #6c757d;
    text-align: center;
    padding: 20rpx;
    width: 100%;
  }