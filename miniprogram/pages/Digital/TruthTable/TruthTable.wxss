/* WXSS */
/* 页面样式 */
page {
    color: #333;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    line-height: 1.6;
    min-height: 100vh;
  }
  
  .container {
      
    display: flex;
    flex-direction: column;
    align-items: center;
    padding:10rpx 50rpx 0rpx 50rpx;
  }
  
  /* 标题区域 */
  .header {
    text-align: center;
    margin-bottom: 40rpx;
    padding: 30rpx;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 20rpx;
    width: 100%;
    backdrop-filter: blur(10rpx);
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
    border: 1rpx solid rgba(255, 255, 255, 0.18);
  }
  
  .title {
    font-size: 40rpx;
    font-weight: bold;
    color: rgb(86, 92, 175);
    display: block;
    margin-bottom: 15rpx;
    text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
  }
  
  .subtitle {
    font-size: 28rpx;
    color: #ababf0;
    display: block;
  }
  
  /* 卡片样式 */
  .card {
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 20rpx;
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
    padding: 30rpx;
    margin-bottom: 30rpx;
    width: 100%;
    transition: all 0.3s ease;
  }
  
  .card:hover {
    transform: translateY(-5rpx);
    box-shadow: 0 15rpx 35rpx rgba(0, 0, 0, 0.3);
  }
  
  /* 选择器区域 */
  .selector-section {
    display: flex;
    flex-direction: column;
    gap: 30rpx;
  }
  
  .selector-group {
    display: flex;
    flex-direction: column;
  }
  
  .selector-label {
    font-size: 30rpx;
    font-weight: 500;
    color: #2c3e50;
    margin-bottom: 15rpx;
  }
  
  .picker-view {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #f0f5ff;
    border: 2rpx solid #d6e4ff;
    border-radius: 12rpx;
    height: 80rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
    color: #1a56db;
    font-weight: 500;
  }
  
  .down-icon {
    width: 30rpx;
    height: 30rpx;
  }
  
  .placeholder {
    color: #a0aec0;
    font-style: italic;
  }
  
  .divider {
    height: 1rpx;
    background: linear-gradient(90deg, transparent, #3498db, transparent);
    margin: 20rpx 0;
  }
  
  /* 表格区域 */
  .section-header {
    margin-bottom: 30rpx;
  }
  
  .section-title {
    font-size: 34rpx;
    font-weight: bold;
    color: #2c3e50;
    display: block;
  }
  
  .section-subtitle {
    font-size: 26rpx;
    color: #7f8c8d;
    display: block;
    margin-top: 10rpx;
  }
  
  .table-container {
    width: 100%;
    overflow-x: auto;
    border-radius: 12rpx;
    box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  }
  
  .table {
    display: table;
    width: 100%;
    min-width: 600rpx;
    background-color: white;
  }
  
  .table-row {
    display: table-row;
  }
  
  .table-cell {
    display: table-cell;
    padding: 25rpx 20rpx;
    text-align: center;
    border-bottom: 1rpx solid #eee;
    font-weight: 500;
  }
  
  .header-row {
    background-color: #3498db;
  }
  
  .header-cell {
    color: white;
    font-weight: 600;
    border-right: 1rpx solid rgba(255, 255, 255, 0.3);
  }
  
  .header-cell:last-child {
    border-right: none;
  }
  
  .table-row:nth-child(even) {
    background-color: #f8f9fa;
  }
  
  /* 说明区域 */
  .instruction-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30rpx;
  }
  
  .instruction-item {
    display: flex;
    align-items: center;
    gap: 15rpx;
  }
  
  .symbol {
    display: inline-block;
    background: #e0f7fa;
    border-radius: 8rpx;
    padding: 8rpx 16rpx;
    font-weight: bold;
    min-width: 60rpx;
    text-align: center;
  }
  
  .symbol-text {
    font-size: 26rpx;
    color: #4b5563;
  }
  
  .info-box {
    background: #e3f2fd;
    border-radius: 12rpx;
    padding: 20rpx;
    border-radius: 20rpx;
    font-size: 26rpx;
    margin-bottom: 20rpx;
    color: #1565c0;
    width: 100%;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
    border: 1rpx solid rgba(255, 255, 255, 0.18);
  }