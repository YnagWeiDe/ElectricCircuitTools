.container {
    padding: 20px;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    background-color: #f0f2f5;
  }
  
  .card {
    background-color: white;
    border-radius: 16px;
    padding: 30px;
    width: 90%;
    box-shadow: 0 6px 18px rgba(0,0,0,0.08);
    display: flex;
    flex-direction: column;
    gap: 25px; /* 增加元素间距 */
  }
  
  .header {
    text-align: center;
    margin-bottom: 15px; /* 减少底部间距 */
  }
  
  .title {
    font-size: 28px;
    font-weight: bold;
    color: #4776E6;
    display: block;
    margin-bottom: 8px; /* 减少标题与副标题间距 */
  }
  
  .subtitle {
    font-size: 16px;
    color: #666;
    display: block;
  }
  
  .contact-card {
    background-color: #f9f9f9;
    border-radius: 12px;
    padding: 25px 20px; /* 增加内边距 */
    border: 1px solid #e8e8e8;
    display: flex;
    flex-direction: column;
    gap: 18px; /* 统一行间距 */
  }
  
  .contact-item {
    display:flex;
    align-items: center;
    justify-content: space-between; /* 优化对齐方式 */
  }
  
  .contact-label {
    width: 80px; /* 增加标签宽度 */
    font-weight: bold;
    color: #333;
    font-size: 16px;
    flex-shrink: 0; /* 防止标签被压缩 */
  }
  
  .contact-value {

    width: 300px;
    font-size: 16px;
    color: #4776E6;
    padding: 0 15px; /* 增加左右间距 */
  }
  
  .copy-btn {
    height: 36px;
    line-height: 36px;
    font-size: 14px;
    background-color: #e9f0ff;
    color: #4776E6;
    border-radius: 5px;
    padding: 0 12px; /* 增加内边距 */
  }
  
  .thank-you {
    text-align: center;
    padding: 25px 0; /* 增加上下间距 */
    font-size: 17px; /* 增大字体 */
    color: #4776E6; /* 使用主题色 */
    line-height: 1.8;
    font-weight: 500; /* 增加字体粗细 */
    border-top: 1px dashed #e0e0e0; /* 添加上方分割线 */
    margin-top: 10px; /* 增加顶部间距 */
  }
  
  .thank-you text {
    display: block;
  }

  /* 固定在底部的提示 */
  .fixed-hint {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #aff3ff;
    padding: 15px 20px;
    border-top: 1px solid #e6f3ff;
    font-size: 14px;
    color: rgb(255, 56, 56);
    border-radius: 10px;
    font-style: normal;
    line-height: 1.6;
    z-index: 10;
  }
  
  .fixed-hint text {
    display: block;
    margin-bottom: 5px;
  }